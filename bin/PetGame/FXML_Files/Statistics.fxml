<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="PetGame.Statistics">
   <children>

      <ImageView fitHeight="500.0" fitWidth="700.0" opacity="1.0">
         <image>
            <Image url="@../../images/parentalcontrols.png" />
         </image>
      </ImageView>

      <Rectangle arcHeight="7.0" arcWidth="8.0" fill="WHITE" height="50.0" layoutX="200.0" layoutY="120.0" stroke="BLACK" width="280.0" />

      <Rectangle arcHeight="10.0" arcWidth="10.0" fill="WHITE" height="180.0" layoutX="135.0" layoutY="170.0" stroke="BLACK" width="410.0" />

      <Label text="Playtime Statistics" layoutX="228.0" layoutY="128.0">
         <font>
            <Font name="Berlin Sans FB" size="30.0" />
         </font>
      </Label>

      <Label text="Total Playtime:" layoutX="250.0" layoutY="210.0"/>
      <Label fx:id="totalPlaytimeLabel" text="0 minutes" layoutX="370.0" layoutY="210.0"/>

      <Label text="Average Playtime:" layoutX="250.0" layoutY="250.0"/>
      <Label fx:id="averagePlaytimeLabel" text="0 minutes" layoutX="370.0" layoutY="250.0"/>

      <Button text="Reset Stats" onAction="#handleResetStats" layoutX="230.0" layoutY="300.0" prefWidth="100.0"/>

      <Button text="Back" onAction="#handleBack" layoutX="360.0" layoutY="300.0" prefWidth="100.0"/>
   </children>
</AnchorPane>
